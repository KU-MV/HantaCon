{
  "name": "HantaCon",
  "email": "kmpark0131@korea.ac.kr",
  "version": "1.2.5",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:osx": "electron-builder --mac",
    "build:linux": "electron-builder --linux --x64 -p never"
  },
  "build": {
    "productName": "HantaCon",
    "linux": {
      "target": [
        "Appimage",
        "deb"
      ],
      "category": "Utility",
      "description": "The HanaCon was developed and maintained by a laboratory leaded by Prof. Jin-Won Song at Korea University, Republic of Korea.",
      "icon": "./build/256x256.png",
      "desktop": {
        "Icon": "/opt/HantaCon/256x256.png"
      }
    },
    "extraFiles": [
      {
        "from": "./build/256x256.png",
        "to": "."
      },
      {
        "from": "./main.nf",
        "to": "."
      },
      {
        "from": "./nextflow.config",
        "to": "."
      },
      {
        "from": "./nextstrain.nf",
        "to": "."
      },
      {
        "from": "./consensus.nf",
        "to": "."
      },
      {
        "from": "./config.json",
        "to": "."
      },
      {
        "from": "./ref",
        "to": "./ref"
      },
      {
        "from": "./nextstrain",
        "to": "./nextstrain"
      }
    ],
    "files": [
      "./main.js",
      "./main.html",
      "./preload.js",
      "./jquery-3.7.0.min.js",
      "./nextstrain.zip",
      "./worker.js",
      "./worker2.js",
      "./main.css",
      "./img/*"
    ]
  },
  "author": "Grey Ha <greytrace64@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "election": "0.0.0",
    "electron-log": "^4.4.8",
    "electron-packager": "^17.1.2",
    "fs-extra": "^11.2.0",
    "process": "^0.11.10"
  }
}
